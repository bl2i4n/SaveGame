<h1><%= @topic.title %></h1>

 <div class="row">
   <div class="col-md-8">
     <p><%= @topic.title %></p>
   </div>
   <div class="col-md-4">

     <%= link_to "Edit", edit_topic_path(@topic), class: 'btn btn-success' %>
     <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this post?'} %>

      <br />
      <br />
      <%= link_to "Create Bookmark", new_topic_bookmark_path(@topic), class: 'btn btn-success' %>

   </div>
 </div>

<div class="bookmarks">
  <% @topic.bookmarks.each do |bookmark| %>
    <div class="row">
      <%= link_to bookmark.url, bookmark.url, target: "_blank" %>
      <%= link_to 'Edit Bookmark', edit_topic_bookmark_path(@topic, bookmark), class: 'btn btn-info' %>
      <%= render partial: 'likes/like', locals: { bookmark: bookmark } %>

    </div>
  <% end %>
</div>
