<h1><%= @topic.title %></h1>

 <div class="row">
   <div class="col-md-8">
     <p><%= @topic.title %></p>
   </div>
   <div class="col-md-4">

     <%= link_to "Edit", edit_topic_path(@topic), class: 'btn btn-success' %>
     <%= link_to "Delete Post", @topic, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this post?'} %>

   </div>
 </div>
