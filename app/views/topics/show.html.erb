<h1>
  <%= @topic.title %>
  <%= link_to "Edit", edit_topic_path(@topic), class: 'btn btn-success pull-right' %>
</h1>

 <div class="row">
   <div class="col-md-8">
     <p>
       <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger pull-right', data: {confirm: 'Are you sure you want to delete this post?'} %>
     </p>

   </div>
   <div class="col-md-4">

    <div id="cbookmark">
      <%= link_to "Create Bookmark", new_topic_bookmark_path(@topic), class: 'btn btn-success' %>
    </div>

   </div>

  <div class="bookmarks col-md-2">
    <% @topic.bookmarks.each do |bookmark| %>
      <div class="">
        <%= link_to bookmark.url, bookmark.url, target: "_blank" %>

        <%= link_to 'Edit Bookmark', edit_topic_bookmark_path(@topic, bookmark), class: 'btn btn-info pull-right' %>

        <div>
          <%= render partial: 'likes/like', locals: { bookmark: bookmark } %>
        </div>

      </div>
    <% end %>
  </div>
</div>
